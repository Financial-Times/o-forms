	<label class="o-forms o-forms--text-area">
		<span	class="o-forms__label">
			<span class="o-forms__label--title">Text area</span>
			<span class="o-forms__label--prompt">Optional prompt text</span>
		</span>
		<span class="o-forms__input">
			<textarea></textarea>
		</span>
	</label>

	<label class="o-forms o-forms--text-area o-forms--required">
		<span	class="o-forms__label">
			<span class="o-forms__label--title">Required text area</span>
		</span>
		<span class="o-forms__input">
			<textarea required></textarea>
		</span>
	</label>

	<label class="o-forms o-forms--text-area o-forms--valid">
		<span	class="o-forms__label">
			<span class="o-forms__label--title">Valid text area</span>
