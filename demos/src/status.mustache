<div class="demo">
	<fieldset class="o-forms o-forms--radio--box o-forms--inline">
		<legend>
			<span class="o-forms__label">standard</span>
		</legend>
		<div class="o-forms--inline__wrapper">
			<label>
				<input type="radio" value="1" name="radio1" checked/>
				<span>Daily</span>
			</label>
			<label>
				<input type="radio" value="2" name="radio1"/>
				<span>Weekly</span>
			</label>
		</div>
	</fieldset>

	<fieldset class="o-forms o-forms--radio--box o-forms--inline o-forms--saving">
		<legend>
			<span class="o-forms__label">inline saving</span>
		</legend>
		<div class="o-forms--inline__wrapper">
			<label>
				<input type="radio" value="1" name="radio2"/>
				<span>Daily</span>
			</label>
			<label>
				<input type="radio" value="2" name="radio2" checked/>
				<span>Weekly</span>
			</label>
		</div>
		<span class="o-forms__status"></span>
	</fieldset>

	<fieldset class="o-forms o-forms--radio--box o-forms--inline o-forms--saved">
