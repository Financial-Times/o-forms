			<label>
				<input type="radio" value="2" name="radio5"/>
				<span>Weekly</span>
			</label>
		</div>
		<span class="o-forms__status o-forms__status--stacked"></span>
	</fieldset>

	<fieldset class="o-forms o-forms--radio--box o-forms--inline o-forms--invalid">
		<legend>
			<span class="o-forms__label">Error</span>
		</legend>
		<div class="o-forms--inline__wrapper">
			<label>
				<input type="radio" value="1" name="radio6" checked/>
				<span>Daily</span>
			</label>
			<label>
				<input type="radio" value="2" name="radio6"/>
				<span>Weekly</span>
			</label>
		</div>
