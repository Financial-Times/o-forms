<div class="o-forms-field" role="group" aria-labelledby="box-radio-group-title">
	<span class="o-forms-title" aria-hidden="true">
		<span class="o-forms-title--main" id="box-radio-group-title">Box style radio buttons</span>
		<span class="o-forms-title--prompt">Optional prompt text</span>
	</span>
	<span class="o-forms-input o-forms-input--group o-forms-input--radio-box">
		<div class="o-forms-input--radio-box__container">
			<label>
				<input type="radio" value="1" name="radio" aria-label="Daily"/>
				<span class="o-forms-input__label" aria-hidden="true">Daily</span>
			</label>
			<label>
				<input type="radio" value="2" name="radio" aria-label="Weekly"/>
				<span class="o-forms-input__label" aria-hidden="true">Weekly</span>
			</label>
		</div>
	</span>
</div>

<div class="o-forms-field" role="group" aria-labelledby="neg-box-radio-group-title">
	<span class="o-forms-title" aria-hidden="true">
		<span class="o-forms-title--main" id="neg-box-radio-group-title">Negative highlight</span>
	</span>
	<span class="o-forms-input o-forms-input--group o-forms-input--radio-box">
		<div class="o-forms-input--radio-box__container">
			<label>
				<input type="radio" value="yes" name="negative" aria-label="Yes"/>
				<span class="o-forms-input__label" aria-hidden="true">Yes</span>
			</label>
			<label>
				<input type="radio" value="no" name="negative" checked aria-label="No"/>
				<span class="o-forms-input__label o-forms-input__label--negative" aria-hidden="true">No</span>
			</label>
		</div>
	</span>
</div>

<div class="o-forms-field" role="group" aria-labelledby="multiple-box-radio-group-title">
	<span class="o-forms-title" aria-hidden="true">
		<span class="o-forms-title--main" id="multiple-box-radio-group-title">
			Multiple choice with default selection
		</span>
	</span>
	<span class="o-forms-input o-forms-input--group o-forms-input--radio-box">
		<div class="o-forms-input--radio-box__container">
			<label>
				<input type="radio" value="Daily" name="multiple" aria-label="Daily"/>
				<span class="o-forms-input__label" aria-hidden="true">Daily</span>
			</label>
			<label>
				<input type="radio" value="Weekly" name="multiple" checked aria-label="Weekly"/>
				<span class="o-forms-input__label" aria-hidden="true">Weekly</span>
			</label>
			<label>
				<input type="radio" value="Monthly" name="multiple" aria-label="Monthly"/>
				<span class="o-forms-input__label" aria-hidden="true">Monthly</span>
			</label>
		</div>
	</span>
</div>

<div class="o-forms-field" role="group" aria-labelledby="error-box-radio-group-title">
	<span class="o-forms-title" aria-hidden="true">
		<span class="o-forms-title--main" id="error-box-radio-group-title">Error</span>
	</span>
	<span class="o-forms-input o-forms-input--group o-forms-input--radio-box o-forms-input--invalid">
		<div class="o-forms-input--radio-box__container">
			<label>
				<input type="radio" value="yes" name="error" checked aria-label="Yes"/>
				<span class="o-forms-input__label" aria-hidden="true">Yes</span>
			</label>
			<label>
				<input type="radio" value="no" name="error" aria-label="No" aria-label="No"/>
				<span class="o-forms-input__label" aria-hidden="true">No</span>
			</label>
		</div>
		<span class="o-forms-input__error">
			We were unable to update your preference, please try again.
		</span>
	</span>
</div>

<div class="o-forms-field" role="group" aria-labelledby="disabled-box-radio-group-title">
	<span class="o-forms-title" aria-hidden="true">
		<span class="o-forms-title--main" id="disabled-box-radio-group-title">Disabled</span>
	</span>
	<span class="o-forms-input o-forms-input--group o-forms-input--radio-box">
		<div class="o-forms-input--radio-box__container">
			<label>
				<input type="radio" value="yes" name="disabled" disabled checked aria-label="Daily"/>
				<span class="o-forms-input__label" aria-hidden="true">Daily</span>
			</label>
			<label>
				<input type="radio" value="no" name="disabled" disabled aria-label="Monthly"/>
				<span class="o-forms-input__label" aria-hidden="true">Monthly</span>
			</label>
		</div>
	</span>
</div>
