			<select>
				<option value="option1" selected>Option 1</option>
				<option value="option2">Option 2</option>
				<option value="option3">Option 3</option>
				<option value="option4">Option 4</option>
			</select>
			<span class="o-forms__suffix-container">
				<button class="o-buttons o-buttons--big"> Go </button>
			</span>
		</span>
	</label>

	<label class="o-forms o-forms--select o-forms--small o-forms--suffix">
		<span class="o-forms__label">
			<span class="o-forms__label--title">Small Select Box</span>
		</span>
		<span class="o-forms__input">
			<select>
				<option value="option1" selected>Option 1</option>
				<option value="option2">Option 2</option>
				<option value="option3">Option 3</option>
				<option value="option4">Option 4</option>
			</select>
			<span class="o-forms__suffix-container">
				<button class="o-buttons"> Go </button>
			</span>
		</span>
	</label>
