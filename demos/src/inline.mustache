<div class="o-forms o-forms--inline" role="group" aria-labelledby="toggle-group-title">
	<span class="o-forms__title" aria-hidden="true">
		<span class="o-forms__title--main" id="toggle-group-title">Default toggle</span>
		<span class="o-forms__title--prompt">Optional prompt text</span>
	</span >
	<span class="o-forms__input o-forms__input--group o-forms__input--toggle">
		<label class="o-forms__element">
			<input type="checkbox" value="1" name="checkbox" checked aria-label="Toggle 1"/>
			<span class="o-forms__input__label" aria-hidden="true">Toggle 1</span>
		</label>
		<label class="o-forms__element">
			<input type="checkbox" value="2" name="checkbox" aria-label="Toggle 2"/>
			<span class="o-forms__input__label" aria-hidden="true">Toggle 2</span>
		</label>
	</span>
</div>

	<div class="o-forms o-forms--inline" role="group" aria-labelledby="round-radio-group-title">
	<span class="o-forms__title" aria-hidden="true">
		<span class="o-forms__title--main" id="round-radio-group-title">Default Radio buttons</span>
		<span class="o-forms__title--prompt">This is an optional prompt.</span>
	</span>
	<span class="o-forms__input o-forms__input--group o-forms__input--radio-round">
		<label class="o-forms__element">
			<input type="radio" value="1" name="radio" checked aria-label="Radio 1"/>
			<span class="o-forms__input__label" aria-hidden="true">Radio 1</span>
		</label>
		<label class="o-forms__element">
			<input type="radio" value="2" name="radio" aria-label="Radio 2"/>
			<span class="o-forms__input__label" aria-hidden="true">Radio 2</span>
		</label>
	</span>
</div>

<div class="o-forms o-forms--inline" role="group" aria-labelledby="radio-error-group-title">
	<span class="o-forms__title" aria-hidden="true">
		<span class="o-forms__title--main" id="radio-error-group-title">Radio Errors</span>
	</span>
	<span class="o-forms__input o-forms__input--group o-forms__input--radio-round o-forms__input--invalid">
		<label class="o-forms__element">
			<input type="radio" value="1" name="radio-error" checked aria-label="Error 1"/>
			<span class="o-forms__input__label" aria-hidden="true">Error 1</span>
		</label>
		<label class="o-forms__element">
			<input type="radio" value="2" name="radio-error" aria-label="Error 2"/>
			<span class="o-forms__input__label" aria-hidden="true">Error 2</span>
		</label>
		<span class="o-forms__error-message">Something has gone wrong.</span>
	</span>
</div>

<div class="o-forms o-forms--inline" role="group" aria-labelledby="checkbox-group-title">
	<span class="o-forms__title" aria-hidden="true">
		<span class="o-forms__title--main" id="checkbox-group-title">Default checkboxes</span>
		<span class="o-forms__title--prompt">Optional prompt text</span>
	</span>
	<span class="o-forms__input o-forms__input--group o-forms__input--checkbox">
		<label class="o-forms__element">
			<input type="checkbox" value="1" name="checkbox-2" checked aria-label="Stacked 1"/>
			<span class="o-forms__input__label" aria-hidden="true">Stacked 1</span>
		</label>
		<label class="o-forms__element">
			<input type="checkbox" value="2" name="checkbox-2" aria-label="Stacked 2"/>
			<span class="o-forms__input__label" aria-hidden="true">Stacked 2</span>
		</label>
		<label class="o-forms__element">
			<input type="checkbox" value="3" name="checkbox-2" checked aria-label="Stacked 3"/>
			<span class="o-forms__input__label" aria-hidden="true">Stacked 3</span>
		</label>
	</span>
</div>

<div class="o-forms o-forms--inline" role="group" aria-labelledby="inline-group-title">
	<span class="o-forms__title" aria-hidden="true">
		<span class="o-forms__title--main" id="inline-group-title">Inline saving</span>
	</span>
	<span class="o-forms__input o-forms__input--group o-forms__input--radio-box o-forms__input--status o-forms__input--inline">
		<div class="o-forms__input--radio-box__container">
			<label class="o-forms__element">
				<input type="radio" value="1" name="saving" checked aria-label="Daily"/>
				<span class="o-forms__input__label" aria-hidden="true">Daily</span>
			</label>
			<label class="o-forms__element">
				<input type="radio" value="2" name="saving" aria-label="Weekly"/>
				<span class="o-forms__input__label" aria-hidden="true">Weekly</span>
			</label>
		</div>
		<span class="o-forms__state o-forms__state--saving"></span>
	</span>
</div>

