<div class="demo">
	<div class="o-forms o-forms--toggle o-forms--inline">
		<span class="o-forms__label">
			<span class="o-forms__label--title">Default toggle</span>
			<span class="o-forms__label--prompt">Optional prompt text</span>
		</span >
		<span class="o-forms__input">
			<label>
				<input type="checkbox" value="1" name="checkbox" checked/>
				<span class="o-forms__input-label">Toggle 1</span>
			</label>
			<label>
				<input type="checkbox" value="2" name="checkbox"/>
				<span class="o-forms__input-label">Toggle 2</span>
			</label>
		</span>
	</div>

	 <div class="o-forms o-forms--radio--round o-forms--inline">
		<span class="o-forms__label">
			<span class="o-forms__label--title">Default Radio buttons</span>
			<span class="o-forms__label--prompt">This is an optional prompt.</span>
		</span>
		<span class="o-forms__input">
			<label>
				<input type="radio" value="1" name="radio" checked/>
				<span class="o-forms__input-label">Default 1</span>
			</label>
			<label>
				<input type="radio" value="2" name="radio"/>
				<span class="o-forms__input-label">Default 2</span>
			</label>
		</span>
	</div>

	<div class="o-forms o-forms--radio--round o-forms--inline o-forms--invalid">
		<span class="o-forms__label">
			<span class="o-forms__label--title">Radio Errors</span>
		</span>
		<span class="o-forms__input">
			<label>
				<input type="radio" value="1" name="radio-error" checked/>
				<span class="o-forms__input-label">Error 1</span>
			</label>
			<label>
				<input type="radio" value="2" name="radio-error"/>
				<span class="o-forms__input-label">Error 2</span>
			</label>
			<span class="o-forms__error-message">Something has gone wrong.</span>
		</span>
	</div>

	<div class="o-forms o-forms--radio--box o-forms--inline o-forms--saving">
		<span class="o-forms__label">
			<span class="o-forms__label--title">Inline saving</span>
		</span>
		<span class="o-forms__input not-stacked">
			<div class="o-forms--radio--box__container">
				<label>
					<input type="radio" value="1" name="saving" checked/>
					<span class="o-forms__input-label">Daily</span>
				</label>
				<label>
					<input type="radio" value="2" name="saving"/>
					<span class="o-forms__input-label">Weekly</span>
				</label>
			</div>
			<span class="o-forms__status"></span>
		</span>
	</div>


	<div class="o-forms o-forms--checkbox o-forms--inline">
		<span class="o-forms__label">
			<span class="o-forms__label--title">Default checkboxes</span>
			<span class="o-forms__label--prompt">Optional prompt text</span>
		</span>
		<span class="o-forms__input">
			<label>
				<input type="checkbox" value="1" name="checkbox-2" checked/>
				<span class="o-forms__input-label">Stacked 1</span>
			</label>
			<label>
				<input type="checkbox" value="2" name="checkbox-2"/>
				<span class="o-forms__input-label">Stacked 2</span>
			</label>
			<label>
				<input type="checkbox" value="3" name="checkbox-2" checked/>
				<span class="o-forms__input-label">Stacked 3</span>
			</label>
		</span>
	</div>

	<label class="o-forms o-forms--text-input o-forms--inline">
		<span class="o-forms__label">
			<span class="o-forms__label--title">Text Input</span>
			<span class="o-forms__label--prompt">Optional prompt text</span>
		</span>
		<span class="o-forms__input">
			<input type="text" name="text" value="">
		</span>
	</label>

	<label class="o-forms o-forms--text-input o-forms--inline">
		<span class="o-forms__label">
			<span class="o-forms__label--title">Text Input</span>
			<span class="o-forms__label--prompt">Inline inputs with long labels / additonal content have a unique class to align them to the start and span error messages.</span>
		</span>
		<span class="o-forms__input">
			<input type="text" name="text" value="">
		</span>
	</label>

	<label class="o-forms o-forms--text-input o-forms--inline o-forms--invalid">
		<span class="o-forms__label">
			<span class="o-forms__label--title">Text Input with an invalid entry</span>
		</span>
		<span class="o-forms__input">
			<input type="text" name="text" value="hp://invalid.com">
			<span class="o-forms__error-message">
				Please enter a valid url
			</span>
		</span>
	</label>

	<label class="o-forms o-forms--select o-forms--inline">
		<span class="o-forms__label">
			<span class="o-forms__label--title">Select Box</span>
			<span class="o-forms__label--prompt">Optional prompt text</span>
		</span>
		<span class="o-forms__input">
			<select>
				<option value="option1" selected>Option 1</option>
				<option value="option2">Option 2</option>
				<option value="option3">Option 3</option>
				<option value="option4">Option 4</option>
			</select>
		</span>
	</label>

	<label class="o-forms o-forms--text-area o-forms--inline">
		<span class="o-forms__label">
			<span class="o-forms__label--title">Text area</span>
			<span class="o-forms__label--prompt">Optional prompt text</span>
		</span>
		<span class="o-forms__input">
			<textarea></textarea>
		</span>
	</label>
</div>
