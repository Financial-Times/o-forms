<div class="demo">
	<label class="o-forms o-forms--text-input">
		<span class="o-forms__label">Text Input</span>
		<span class="o-forms__prompt">Optional prompt text</span>
		<input type="text" name="text" value="">
	</label>

	<label class="o-forms o-forms--text-input o-forms--optional">
		<span class="o-forms__label">Text Input</span>
		<span class="o-forms__prompt">(optional)</span>
		<input type="text" name="text" value="">
	</label>

	<label class="o-forms o-forms--text-input o-forms--valid">
		<span class="o-forms__label">Text Input with a valid entry</span>
		<input type="text" name="text" value="Value">
	</label>

	<label class="o-forms o-forms--text-input o-forms--invalid">
		<span class="o-forms__label">Text Input with an invalid entry</span>
		<input type="text" name="text" value="hp://invalid.com">
		<span class="o-forms__error-message">
			Please enter a valid url
		</span>
	</label>

	<label class="o-forms o-forms--text-input">
		<span class="o-forms__label">Disabled text input</span>
		<input type="text" name="text" value="Value" disabled>
	</label>

	<label class="o-forms o-forms--text-input o-forms--small">
		<span class="o-forms__label">Small text input</span>
		<input type="text" name="text" value="Value">
	</label>
</div>
