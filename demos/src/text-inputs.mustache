<div class="demo-column">
	<div class="o-forms__field-group">
		<label class="o-forms__label">Text input</label>
		<small class="o-forms__additional-info">prompt text ie password needs 6 characters</small>
		<input type="text" placeholder="placeholder" class="o-forms__field--text" />
	</div>
	<div class="o-forms__field-group o-forms--valid">
		<label class="o-forms__label">Text input with valid entry</label>
		<input type="text" placeholder="placeholder" class="o-forms__field--text o-forms__field--valid" value="Field value" />
	</div>
	<div class="o-forms__field-group o-forms--error">
		<label class="o-forms__label">URL input :invalid</label>
		<input type="url" placeholder="placeholder" class="o-forms__field--text" value="hp://invalid.com" />
		<div class="o-forms__errortext">Please enter a valid url</div>
	</div>
</div>
<div class="demo-column">
	<div class="o-forms__field-group">
		<label class="o-forms__label">Text input disabled</label>
		<input type="text" placeholder="placeholder" class="o-forms__field--text o-forms__field--valid" value="Field value" disabled="disabled" />
	</div>
	<div class="o-forms__field-group o-forms--error">
		<label class="o-forms__label">Text input (error)</label>
		<input type="text" placeholder="placeholder" class="o-forms__field--text" value="Field value" />
		<div class="o-forms__errortext">Invalid entry</div>
	</div>
</div>
<div class="demo-column">
	<div class="o-forms__field-group">
		<label class="o-forms__label">Small text field</label>
		<input type="text" placeholder="placeholder" class="o-forms__field--text o-forms__field--small" value="Field value" />
	</div>
</div>
